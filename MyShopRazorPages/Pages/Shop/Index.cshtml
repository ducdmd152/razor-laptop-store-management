@page
@model MyShopRazorPages.Pages.Shop.IndexModel
@{
    ViewData["Title"] = "MyShop Laptop";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width">
    <title>MyShop Laptop</title>
    <style>
        .Items {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            flex-wrap: wrap;
            width: 90%;
            max-width: 1200px;
            margin: 0 auto;
            background: #fff;
            padding: 20px;
        }

        .Item {
            width: 30%;
            margin-bottom: 20px;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 5px;
            transition: box-shadow 0.4s ease-in-out;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
            background-color: #fff;
        }

            .Item:hover {
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
                background-color: #f0f0f0; /* Màu nền khi hover */
            }

        .Item__link {
            text-decoration: none;
            color: #333;
            display: block;
        }

        .Item__title {
            text-align: center;
            font-family: 'Montserrat', sans-serif;
            font-size: 1em;
            margin-top: 15px;
            font-weight: bold; /* In đậm */
            height: 40px;
        }

        .Item__price {
            text-align: center;
            font-family: 'Montserrat', sans-serif;
            font-size: 1em;
            margin-top: 10px;
                color: #FFD700;
            font-weight: bold; /* In đậm */
        }

        .ImageContainer {
            width: 100%;
            height: auto;
        }

        .Image {
            width: 100%;
            height: auto;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <div class="Items">
        @foreach (var item in Model.Product)
        {
            <div class="Item">
                <a asp-page="./Details" asp-route-id="@item.Id" class="Item__link">
                    <div class="ImageContainer" style="height: 200px; width: 100%;">
                        <img src="@Html.DisplayFor(modelItem => item.Image)" class="Image" style="object-fit: cover; width: 100%; height: 100%;">
                    </div>
                    <div class="Item__title"style="height: 40px; text-decoration: bold;">@Html.DisplayFor(modelItem => item.Name)</div>
                    <div class="Item__price">$ @Html.DisplayFor(modelItem => item.Price)</div>
                </a>
            </div>
        }
    </div>
    <nav aria-label="Page navigation" style="display: flex; justify-content: center;">
    <ul class="pagination">
            @for (var i = 1; i <= @Model.LastPageIndex; i++)
            {
                <li class="page-item @(Model.PageIndex == i ? "active" : "")">
                    <a class="page-link" href="?pageIndex=@i">@i</a>
                </li>
            }
    </ul>
</nav>
</body>
</html>

</div>