@page
@model MyShopRazorPages.Pages.Products.DeleteModel

@{
    ViewData["Title"] = "Delete Confirm";
}

<h1>Delete</h1>

<h3 style="color: red">Are you sure you want to delete this?</h3>
<div>
    <h4>@Model.Product.Name</h4>
    <hr />
    
    <div class="row">
        <div class="col-md-6">
            <dl class="row">

                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Product.Description)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Product.Description)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Product.Quantity)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Product.Quantity)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Product.Price)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Product.Price)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Product.Status)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Product.Status)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Product.Category)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Product.Category.Name)
                </dd>
            </dl>
            <form method="post">
                <input type="hidden" asp-for="Product.Id" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-page="./Index">Back to List</a>
            </form>
        </div>
        <div class="col-md-6">
            <img src="@Model.Product.Image" alt="Product Image" class="img-fluid" style="max-height: 240px;" />
        </div>
    </div>
</div>
