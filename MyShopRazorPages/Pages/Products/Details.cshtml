@page
@model MyShopRazorPages.Pages.Products.DetailsModel

@{
    ViewData["Title"] = "Product Details";
}

<h1>@Model.Product.Name</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <dl class="row">
            
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Product.Description)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Product.Description)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Product.Quantity)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Product.Quantity)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Product.Price)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Product.Price)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Product.Status)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Product.Status)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Product.Category)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Product.Category.Name)
            </dd>
        </dl>
        <div>
            <a asp-page="./Edit" asp-route-id="@Model.Product?.Id" class="btn btn-primary">Edit</a>
            <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
    <div class="col-md-6">
        <img src="@Model.Product.Image" alt="Product Image" class="img-fluid" style="max-height: 280px;" />
    </div>
</div>
