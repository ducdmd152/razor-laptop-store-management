@using MyShopManagementBO;
@using Newtonsoft.Json;
@using Microsoft.AspNetCore.Http;
@{
	var httpContext = ViewContext.HttpContext;	
	var userString = httpContext.Session.GetString("CREDENTIAL");
	var user = userString != null ? JsonConvert.DeserializeObject<User>(userString) : null;
	ViewData["User"] = user;
	string role = null;
	@if (user != null)
	{
		ViewData["Name"] = user.Name;
		role = user.Role.Name.ToUpper();
	}
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyShopRazorPages</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyShopRazorPages.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Laptop Store</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>					
					@if (role == null)
					{
						<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
							<ul class="navbar-nav flex-grow-1">
								<li class="nav-item">
									<a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
								</li>								
								<li class="nav-item">
									<a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
								</li>
							</ul>
						</div>
						<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
							<ul class="navbar-nav flex-grow-1 justify-content-end">
							<li class="nav-item">
								<a class="nav-link text-dark" asp-area="" asp-page="/Login/Index">Login</a>
							</li>
							</ul>
						</div>
					}
					else if (role.Equals("ADMIN"))
					{
						<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
							<ul class="navbar-nav flex-grow-1">
								<li class="nav-item">
									<a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
								</li>
								<li class="nav-item">
								<a class="nav-link text-dark" asp-area="" asp-page="/Accounts">Account Management</a>
								</li>
								<li class="nav-item">
									<a class="nav-link text-dark" asp-area="" asp-page="/Profile">My Profile</a>
								</li>
							</ul>
						</div>
						<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
							<ul class="navbar-nav flex-grow-1 justify-content-end">
								<p class="nav-link " style="color: green">Hello, @ViewBag.Name</p>
								<a class="nav-link text-dark" asp-area="" asp-page="/Logout/Index">Logout</a>
							</ul>

						</div>
					}
					else if (role.Equals("MANAGER"))
					{
						<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
							<ul class="navbar-nav flex-grow-1">
								<li class="nav-item">
									<a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
								</li>
								<li class="nav-item">
									<a class="nav-link text-dark" asp-area="" asp-page="/Products/Index">Product Management</a>
								</li>
								<li class="nav-item">
									<a class="nav-link text-dark" asp-area="" asp-page="/Profile">My Profile</a>
								</li>
							</ul>
						</div>
						<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
							<ul class="navbar-nav flex-grow-1 justify-content-end">
								<p class="nav-link " style="color: green">Welcome @ViewBag.Name</p>
								<a class="nav-link text-dark" asp-area="" asp-page="/Logout/Index">Logout</a>
							</ul>

						</div>
					}
				else if (role.Equals("CUSTOMER"))
				{
					<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
						<ul class="navbar-nav flex-grow-1">
							<li class="nav-item">
								<a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-dark" asp-area="" asp-page="/Shop">Shop</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-dark" asp-area="" asp-page="/Profile">My Profile</a>
							</li>
						</ul>
					</div>
					<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
						<ul class="navbar-nav flex-grow-1 justify-content-end">
							<p class="nav-link " style="color: green">Welcome, @ViewBag.Name</p>
							<a class="nav-link text-dark" asp-area="" asp-page="/Logout/Index">Logout</a>
						</ul>

					</div>
				}
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - MyShopRazorPages - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>